@{
    ViewData["Title"] = "验证页";
}

<div class="mesg red" style="font-size:35px;
font-weight:800;margin:200px auto;text-align:center;">正在验证...</div>

@section scripts{

    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="/js/jquery.common.js"></script>
    <script type="text/javascript">

        $(function () {
            $.ajax({
                url: "/Api/LoveCollection/CheckLogin",
                type: "post",
                data: {
                    "desstring": $.queryString("desstring"),
                },
                success: function (sData) {
                    if (!sData.isSuccess) {
                        $(".mesg").html(sData.message);
                    }
                    else {
                        location.href = "/";
                    }
                }
            });
        })
    </script>
}
